<% layout('layouts/boilerplate') %>
<style>
    body{
        background-color: rgb(16, 171, 163);
    }
    label{
        color:black;
        font-size: 16px;
        font-weight: 500;
    }
    .form-control{
        background-color: white;
        padding: .375rem .75rem;
        font-family: 'Poppins', sans-serif;
        letter-spacing: 0.5px;
        font-weight: 600;
    }
    .needs-validation{
        box-shadow: 0 0 40px rgba(8, 7, 16, 0.6);
        border-radius: 20px;
        padding: 100px;
        background-color: darkgray;
        display:flex;
        
        flex-direction: column;
        /* align-items: center; */
        justify-content: center;
        align-content: center;
    }
    .heading{
        font-size: calc(1.375rem + 1.5vw);
        font-weight: 300;
        line-height: 1.2;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 5px;
    }
    .col-6{
        padding-top: 100px;
        padding-bottom: 100px;
    }
    .btn{
        font-family: 'Poppins', sans-serif;
        color: #ffffff;
        letter-spacing: 0.5px;
    }
</style>
<div class="row">
    <div class="col-6 mx-auto">
        <form action="/<%= foundRecipe._id %>?_method=patch" method="post" novalidate class="needs-validation">
            <h1 class="heading">Please Edit Recipe</h1>
            <div class="mb-3">
                <label for="naam">Recipe Name:</label>
                <input type="text" class="form-control" name="name" id="naam" placeholder="Name of the Recipe" value="<%= foundRecipe.name %>" required>
            </div>

            <div class="mb-3">
                <label for="img">Image:</label>
                <input type="text" class="form-control" name="img" id="img" placeholder="URL of the Image" value="<%= foundRecipe.img %>" required>
            </div>

            <div class="mb-3">
                <label for="ingredients">Ingredients:</label>
                <textarea class="form-control" name="ingredients" id="ingredients" rows="3" cols="100" placeholder="Ingredients for the Recipe" required><%= foundRecipe.ingredients %></textarea>
            </div>

            <div class="mb-3">
                <label for="instructions">Instructions:</label>
                <textarea class="form-control" name="instructions" id="instructions" rows="3" cols="100" placeholder="Instructions for the Recipe" required><%= foundRecipe.instructions %></textarea>
            </div>

            <button class="btn btn-success btn-sm" type="submit">Add Recipe</button>
        </form>
    </div>
</div>