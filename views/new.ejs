<% layout('layouts/boilerplate') %>
<style>
    div{
        background-color: #50727B;
    }
    label{
        color:white;
    }
    .form-control{
        background-color: #35374B;
    }
    .form-control::placeholder {
        color: white;
    }
    .needs-validation{
        display:flex;
        flex-direction: column;
        /* align-items: center; */
        justify-content: center;
        align-content: center;
        height: 100vh;
    }
    .heading{
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        border: 1px solid white;
        border-radius: 5px;
    }
    .btn{
        border: 1px solid white;
    }
</style>
<div class="row">
    <div class="col-6 mx-auto">
        <form action="/" method="post" novalidate class="needs-validation">
            <h1 class="heading">Please Add Recipe Details</h1>
            <div class="mb-3">
                <label for="naam">Recipe Name:</label>
                <input type="text" class="form-control" name="name" id="naam" placeholder="Name of the Recipe" required>
            </div>

            <div class="mb-3">
                <label for="img">Image:</label>
                <input type="text" class="form-control" name="img" id="img" placeholder="URL of the Image" required>
            </div>

            <div class="mb-3">
                <label for="ingredients">Ingredients:</label>
                <textarea class="form-control" name="ingredients" id="ingredients" rows="3" cols="100" placeholder="Ingredients for the Recipe" required></textarea>
            </div>

            <div class="mb-3">
                <label for="instructions">Instructions:</label>
                <textarea class="form-control" name="instructions" id="instructions" rows="3" cols="100" placeholder="Instructions for the Recipe" required></textarea>
            </div>

            <button class="btn btn-success btn-sm" type="submit">Add Recipe</button>
        </form>
    </div>
</div>